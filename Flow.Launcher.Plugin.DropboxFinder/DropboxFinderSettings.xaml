<UserControl
    x:Class="Flow.Launcher.Plugin.DropboxFinder.DropboxFinderSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dropboxfinder="clr-namespace:Flow.Launcher.Plugin.DropboxFinder"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Flow.Launcher.Plugin.DropboxFinder"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="DropboxFinderSettings_Loaded"
    mc:Ignorable="d">

    <StackPanel>
        
        <Label x:Name="Label" Content="OAuth Token:" Margin="25 30 0 0"/>
        <StackPanel Orientation="Horizontal" Margin="25 10 0 0">
            <TextBox x:Name="OAuthRefreshKey" Width="264" Height="20"/>
            <Button x:Name="btnSave" Click="btnSave_Click" Content="Save" Margin="30 0 0 0" Height="30" Width="50"/>
        </StackPanel>
        <Label x:Name="Label2" Content="Dropbox Folder" Margin="25 30 0 0"/>
        <StackPanel Orientation="Horizontal" Margin="25 10 0 0">
            <TextBox x:Name="DropboxFolderPath" Width="264" Height="20"/>
            <Button x:Name="btnSave2" Click="btnSave2_Click" Content="Save" Margin="30 0 0 0" Height="30" Width="50"/>
        </StackPanel>

    </StackPanel>
    
</UserControl>